<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--ToolBar上的Title颜色-->
        <item name="titleTextColor">@color/active_text</item>
        <item name="subtitleTextColor">@color/active_text</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
        <!-- 设置actionOverflowMenuStyle以自定义菜单的背景 -->
        <item name="actionOverflowMenuStyle">@style/MenuTheme</item>
    </style>


    <style name="MenuTheme">
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:popupBackground">@drawable/menu_background</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:itemBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="Widget.App.Button.MD3" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item> <!-- 圆角 -->
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="backgroundTint">@color/background</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
